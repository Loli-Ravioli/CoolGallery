body,
html {
    font: 16px/1.4 Georgia, serif;
}
.page {
    min-width: 1000px;
    padding: 2.5rem 2rem;
}
.title{
    font-size:3rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.01em;
    text-align: center;
    margin-bottom: 0,5rem;
}
.gallery{
    &Item{
        display: inline-block;
        width:25%;
        padding-bottom: 29%;
        height :0;
        position relative;
        vertical-align top;
    }
}
    .card{
        position: absolute;
        top:0;
        bottom:0;
        left:0;
        right:0;
        display: block;
        color:white;
        overflow: hidden;
        &:hover,
        &:visited{
            color white;
        }


        &Content,
        &Hover,
        &Image{
            position: absolute;
            top:0;
            left:0;
            height:  100%;
            width: 100%;
        }
        &Image{
            object-fit: cover;
            z-index: 1;
            transform scale(1);
            transition: transform  2.7s
        }
        &Hover{
            z-index 2;
            background rgba(0,0,0,0.6);
            opacity 0;
            transition all 0.7s;
        }
        &Content{
            z-index 3;
            display flex;
            flex-direction column;
            align-items center;
            justify-content center;
            padding 2rem;
            box-sizing border-box;
            opacity 0;
        }
        &Title{
            font-size 1.2rem;
            text-transform uppercase;
            letter-spacing 0.1em;
            text-align center;
            margin-bottom 0.2em;
            color darkgoldenrod;
        }
        &:hover{
            .cardHover,
            .cardContent{
                opacity 1;
            }

            .cardImage{
                transform scale(1.2);
            }
        }
    }