.explosion {
display none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vw;
  background: white;
  min-width: 1023px;
  min-height: 600px;
  z-index: 999;
  color: black;
  opacity: 0;
  &_Opened{
    display: block;
  }
  &_Opening{
    display: block;
    .explosionImage{
      transition none;
    }
  }
  &Summary{
    position fixed;
    bottom 0;
    left 0;
    z-index 5;
    background #2d5021;
    transition width .7s;
    width: 0%;
    color white;
    overflow hidden;

    &Content{
      padding: 1rem 5rem;
      opacity 1;
      white-space nowrap;
      transition opacity .3s;
    }
  }
  &Title{
    font-size 2rem;
    text-transform uppercase;
    letter-spacing 0.1rem;
  }
  &Description{
    color #daa35b
  }

  &Controls{
    display flex;
    flex-direction column;
    width 3rem;
    top:0;
    position absolute;
    z-index :7;
    justify-content: center;
    right 22%;
    margin-top 3000px;
    height 400px;
    transition margin .7s;
    }
  &Close{
    position absolute;
    top 0;
    width 3rem;
    height 3rem;
    border none;
    background none;
    background-position center;
    background-size 80%;
    background-image url("/libs/explosion/images/close.svg");
    cursor: pointer;
  }


  &Navs{
    display flex;
    flex-direction column;
    align-items center;
  }
  &Nav{
    width 3rem;
    height 3rem;
    border-radius 50%;
    border 3px solid black;
    background-color :transparent;
    background-repeat no-repeat;
    background-position center;
    background-size 80%;
    cursor pointer;
    text-align center;
    opacity 1;
    transition :background 0.6s,opacity 0.6s;

    &:hover{
      background-color black;
    }
    &:disabled{
      pointer-events none;
      opacity 0.3;
    }


    &Prev{
      background-image url("/libs/explosion/images/arrow-up.svg");
      &:hover{
        background-image url("/libs/explosion/images/arrow-up-white.svg")
      }
    }
    &Next{
      background-image url("/libs/explosion/images/arrow-down.svg");
      &:hover{
        background-image url("/libs/explosion/images/arrow-down-white.svg")
      }
    }
  }
  &Image{
    position :absolute;
    width :500px;
    object-fit cover;
    display block;
    z-index :2;
    height auto;
    transform translate3d(0,0,0) scale(1);
    transform-origin 50% 50%;
    backface-visibility hidden;
    transition margin .7s,transform .7s,opacity .7s;
  }

  &Counter{
    font-weight :bold;
    font-size :1.2rem;
    padding :1rem 0;
  }

}